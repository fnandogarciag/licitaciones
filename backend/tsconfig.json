{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "*"],
      "@backend/*": ["src/*", "*"],
      "@/lib/*": ["src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
