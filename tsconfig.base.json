{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "incremental": true,
    // ðŸ‘‡ Decorators para TypeORM
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // ðŸ‘‡ Base comÃºn de resoluciÃ³n
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/*"],
      "@frontend/*": ["frontend/*"]
    }
  }
}
