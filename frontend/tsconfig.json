{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"], // local alias interno del frontend
      "@frontend/*": ["*"] // hereda el global
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
