# === POSTGRES ===
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name
POSTGRES_PORT=5432

# === APP CONFIG ===
BACKEND_PORT=3001
FRONTEND_PORT=3000

# === DATABASE CONNECTION ===
DB_HOST=postgres_db
DB_PORT=5432
DB_USER=${POSTGRES_USER}
DB_PASS=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB}

# When true the frontend will proxy /api requests to the Docker service name 'backend'
NEXT_PUBLIC_USE_DOCKER=true

# === ADMIN CREDENTIALS ===
ADMIN_USER=your_admin_username
ADMIN_PASSWORD=your_admin_password

# Opcional: clave de cifrado utilizada por el manifiesto de Acciones del Servidor de Next.js (base64). Solo se requiere en algunas implementaciones.
# Puede generar una clave de 32 bytes y codificarla en base64, por ejemplo, en PowerShell:
# [System.Convert]::ToBase64String((New-Object System.Security.Cryptography.RNGCryptoServiceProvider).GetBytes(32))
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=
